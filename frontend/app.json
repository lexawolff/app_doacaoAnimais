{
  "expo": {
    "name": "app-adote",
    "slug": "app-adote",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/AdocaoPet-semfundo.png",
    "scheme": "appadote",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.adoteme.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/AdocaoPet.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.adoteme.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/AdocaoPet.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/AdocaoPet.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-facebook"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
